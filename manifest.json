{
  "manifest_version": 3,
  "name": "Web Pilot",
  "version": "1.0",
  "description": "Chat with any website.",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1/*"
  ]
}
